<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/image_layout"
    android:layout_width="140dip"
    android:layout_height="200dip"
    android:background="@drawable/white"
    android:baselineAligned="false"
    android:orientation="vertical"
    android:padding="0dp" >

    <TextView
        android:id="@+id/tvBrand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/name"
        android:textColor="@drawable/best_deal"
        android:textSize="14sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/tvBrandLayout"
        android:layout_width="140dip"
        android:layout_height="160dip"
        android:layout_alignParentTop="true"
        android:layout_below="@+id/tvBrandLayout"
        android:layout_marginTop="15dip"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/img"
            android:layout_width="140dip"
            android:layout_height="140dip"
            android:layout_margin="1dip"
            android:background="@null"
            android:scrollbars="none"
            android:visibility="invisible" >
        </ImageView>

        <RelativeLayout
            android:id="@+id/tvBrandLayout"
            android:layout_width="45dip"
            android:layout_height="45dip"
            android:layout_alignParentRight="true"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/offer_img"
                android:layout_width="45dip"
                android:layout_height="45dip"
                android:layout_alignParentTop="true"
                android:background="@drawable/green_circle"
                android:scrollbars="none"
                android:visibility="visible" >
            </ImageView>

            <TextView
                android:id="@+id/tvOfferText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dip"
                android:text="OFFER"
                android:textColor="@drawable/white"
                android:textSize="10sp"
                android:textStyle="bold"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tvOffer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvOfferText"
                android:layout_centerHorizontal="true"
                android:text="@string/name"
                android:textColor="@drawable/white"
                android:textSize="10sp"
                android:textStyle="bold"
                android:visibility="visible" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="140dip"
        android:layout_height="50dip"
        android:layout_alignParentBottom="true"
        android:background="@drawable/grey_bg"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tvProductName"
            android:layout_width="140dip"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tvPrice"
            android:gravity="center_horizontal"
            android:text="@string/name"
            android:textColor="@drawable/white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tvPrice"
            android:layout_width="140dip"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center_horizontal"
            android:text="@string/price"
            android:textColor="@drawable/white"
            android:textSize="12sp"
            android:textStyle="bold" />
    </RelativeLayout>

</RelativeLayout>